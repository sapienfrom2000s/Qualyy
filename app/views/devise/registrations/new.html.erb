<section class="hero has-background-link-light is-fullheight">
  <div class="hero-head">
  <%= render 'layouts/unauthenticated' %>
  </div>
   <% flash.each do |name, msg| %>
     <p style="color: green; text-align: center;"><%= msg %></p>
   <% end %>
  <div class="hero-body mt-0 mb-0 columns is-justify-content-center">
    <div class="column is-hidden-touch">
    </div>
    <div class="column box is-one-quarter-desktop is-half-tablet pt-5 pb-5">
      <%# <h2 class='login'>Sign Up</h2> %>
        <div class="column">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <div class="field">
            <p><%= f.label :email, 'Email' , class: ['label', 'is-large'] %>
            <div class="control">
              <%= f.text_field :email, class: ['input', 'is-medium'] %></p>
            </div>
          </div>

          <div class="field">
            <p><%= f.label :name, 'Name' , class: ['label', 'is-large'] %>
            <div class="control">
              <%= f.text_field :name, class: ['input', 'is-medium'] %></p>
            </div>
          </div>

          <div class="field">
            <p><%= f.label :youtube_api_key, 'Youtube API Key' , class: ['label', 'is-large'] %>
            <div class="control">
              <%= f.text_field :youtube_api_key, class: ['input', 'is-medium'] %></p>
            </div>
          </div>

          <div class="field">
            <%= f.label :password, class: ['label', 'is-large'] %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password", class: ['input', 'is-medium'] %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, class: ['label', 'is-large'] %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: ['input', 'is-medium'] %>
          </div>

          <% if devise_mapping.rememberable? %>
            <div class="field">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
        <% end %>
        <div class="actions">
          <%= f.submit "Sign Up", class: ['button', 'is-fullwidth', 'is-info'] %>
          <div class="links pt-3">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      <% end %>
    </div>
    </div>
    <div class="column is-hidden-touch"></div>
</section>