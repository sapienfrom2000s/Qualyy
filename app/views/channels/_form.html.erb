<%= form_with model: channel do |form| %>
  <%= form.label :identifier, 'Channel ID' %><br>
  <%= form.text_field :identifier, :size => 28 %><br>
  <%= form.fields_for :filter do |form| %>
    <%= form.label :keywords %><br>
    <%= form.text_field :keywords, :size => 35 %><br>
    <%= form.label :non_keywords, 'Non Keywords' %><br>
    <%= form.text_field :non_keywords, :size => 35 %><br>
    <%= form.label :published_before, 'Published Before' %><br>
    <%= form.date_field :published_before %><br>
    <%= form.label :published_after, 'Published After' %><br>
    <%= form.date_field :published_after %><br>
    <%= form.label :minimum_duration, 'Minimum Time(in s)' %><br>
    <%= form.number_field :minimum_duration, min: 1, max: 14400, required: true %><br>
    <%= form.label :maximum_duration, 'Maximum Time(in s)' %><br>
    <%= form.number_field :maximum_duration, min: 1, max: 14400, required: true %><br>
    <%= form.label :videos %><br>
    <%= form.select :videos, ["50", "100", "200", "300", "400"] %><br>
    <%= form.submit "#{button_name}" %>
  <% end %>
<% end %>
